---
import { Image } from 'astro:assets';
import aboutData from '../content/about.json';
import profileImage from '../assets/profile.png';
---

<section id="about" class="max-w-6xl mx-auto px-6 py-24 border-t border-slate-100 dark:border-slate-900">
  <div class="grid md:grid-cols-2 gap-16 items-center">
    <div data-aos="fade-right" class="relative">
      <div class="aspect-square bg-slate-100 dark:bg-slate-900 rounded-[3rem] overflow-hidden relative group">
        <div class="absolute inset-0 bg-gradient-to-tr from-blue-500/20 to-transparent dark:from-blue-500/10 z-10 group-hover:opacity-50 transition-opacity"></div>

        <Image
          src={profileImage}
          alt="Foto Profil"
          width={600}
          height={600}
          format="avif"
          quality="high"
          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
        />
      </div>

      <div class="absolute -bottom-6 -right-6 bg-white dark:bg-slate-800 p-6 rounded-3xl shadow-xl dark:shadow-blue-900/20 border border-slate-100 dark:border-blue-500/20 z-20" data-aos="zoom-in" data-aos-delay="500">
        <span class="block text-3xl font-black text-blue-600 dark:text-blue-400">{aboutData.stats[0].value}</span>
        <span class="text-[10px] font-bold uppercase tracking-widest text-slate-400 dark:text-slate-500">{aboutData.stats[0].label}</span>
      </div>
    </div>

    <div data-aos="fade-left">
      <h2 class="text-sm font-bold tracking-[0.4em] text-blue-600 dark:text-blue-400 uppercase mb-4">{aboutData.title}</h2>

      <h3 class="text-4xl font-black mb-6 leading-tight text-slate-900 dark:text-white">
        {aboutData.subtitle}
      </h3>

      <p class="text-slate-600 dark:text-slate-400 mb-8 leading-relaxed text-lg">
        {aboutData.description}
      </p>

      <div class="flex gap-8 p-6 bg-slate-50/50 dark:bg-slate-900/50 rounded-2xl border border-slate-100 dark:border-slate-800 w-fit">
        {aboutData.stats.slice(1).map((stat, index) => (
          <Fragment key={index}>
            <div class="text-left">
              <p class="font-black text-2xl text-slate-900 dark:text-white">{stat.value}</p>
              <p class="text-[10px] font-bold uppercase tracking-tighter text-slate-400 dark:text-slate-500">{stat.label}</p>
            </div>
            {index === 0 && <div class="w-px h-10 bg-slate-200 dark:bg-slate-700" />}
          </Fragment>
        ))}
      </div>
    </div>
  </div>
</section>

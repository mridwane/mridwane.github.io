---
import { SiTheboringcompany } from 'react-icons/si';
import experienceData from '../content/experience.json';
import { FaBuilding } from 'react-icons/fa';
---

<section id="experience" class="max-w-5xl mx-auto px-6 py-24">
  <div class="mb-16 border-l-4 border-blue-600 pl-6" data-aos="fade-right">
    <h2 class="text-sm font-bold tracking-[0.3em] text-blue-600 dark:text-blue-400 uppercase mb-2">History</h2>
    <h3 class="text-4xl font-black text-slate-900 dark:text-white">Pengalaman.</h3>
  </div>

  <div class="relative">
    <div class="absolute left-0 top-0 h-full w-px bg-slate-100 dark:bg-slate-800 ml-[11px]"></div>

    <div class="space-y-8">
      {experienceData.items.map((item, index) => (
        <div class="relative pl-12 group" data-aos="fade-up" data-aos-delay={index * 100}>

          <div class="absolute left-0 top-6 w-[24px] h-[24px] flex items-center justify-center">
            <div class="w-2 h-2 rounded-full bg-slate-300 dark:bg-slate-700 group-hover:bg-blue-500 group-hover:scale-150 transition-all duration-300"></div>
          </div>

          <div class="p-8 bg-white dark:bg-slate-900/30 border border-slate-100 dark:border-slate-800/60 rounded-2xl hover:border-blue-500/20 hover:bg-slate-50/50 dark:hover:bg-slate-900/50 transition-all duration-300 shadow-sm hover:shadow-md">
            <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-4">
              <div>
                <span class="text-xs font-bold text-blue-600 dark:text-blue-500 uppercase tracking-tighter mb-2 block">
                  {item.year}
                </span>
                <h4 class="text-xl font-bold text-slate-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {item.role}
                </h4>
                <p class="text-slate-500 dark:text-slate-400 font-medium mb-2 italic text-sm">
                  <span class="flex items-center gap-2">
                  <FaBuilding /> {item.company}
                  </span>
                </p>
              </div>
            </div>

            <p class="text-slate-600 dark:text-slate-400 text-sm md:text-base leading-relaxed mb-6 max-w-3xl">
              {item.desc}
            </p>

            <div class="flex flex-wrap gap-2">
              {item.tech.map((t) => (
                <span class="px-3 py-1 bg-slate-100 dark:bg-slate-800/50 text-slate-600 dark:text-slate-400 text-[10px] font-bold rounded-lg uppercase tracking-wide border border-transparent group-hover:border-slate-200 dark:group-hover:border-slate-700 transition-all">
                  {t}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

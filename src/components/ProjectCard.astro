---
interface Props {
  title: string;
  desc: string;
  tags: string[];
  delay?: string;
}
const { title, desc, tags, delay = "0" } = Astro.props;
---
<div data-aos="fade-up" data-aos-delay={delay} class="group">
  <div class="aspect-video bg-slate-200 dark:bg-slate-800 rounded-[2rem] mb-6 overflow-hidden relative border border-slate-100 dark:border-slate-800 transition shadow-lg group-hover:shadow-2xl">
    <div class="absolute inset-0 bg-red-600/10 opacity-0 group-hover:opacity-100 transition duration-500"></div>
    <div class="w-full h-full flex items-center justify-center font-bold text-slate-400 uppercase tracking-tighter">
      Project Preview
    </div>
  </div>
  <div class="flex justify-between items-start">
    <div>
      <h4 class="text-2xl font-black mb-2 tracking-tight">{title}</h4>
      <p class="text-slate-500 dark:text-slate-400 text-sm mb-4">{desc}</p>
      <div class="flex gap-2">
        {tags.map(tag => (
          <span class="text-[9px] font-bold px-2 py-1 bg-slate-100 dark:bg-slate-800 rounded uppercase tracking-widest">{tag}</span>
        ))}
      </div>
    </div>
    <a href="#" class="w-12 h-12 bg-white dark:bg-slate-800 rounded-full flex items-center justify-center border border-slate-200 dark:border-slate-700 hover:bg-red-500 hover:text-white transition">â†—</a>
  </div>
</div>

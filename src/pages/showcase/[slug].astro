---
import MainLayout from '../../layouts/MainLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import projects from '../../content/projects.json';

export function getStaticPaths() {
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;

const formatText = (text: string) => {
  const boldPattern = /\*\*(.*?)\*\*/g;
  let html = text;
  
  const hasList = html.includes('- ');
  
  if (hasList) {
    html = html.replace(/\n\n/g, '\n');
    
    const lines = html.split('\n');
    let result = '';
    let inList = false;
    let listItems: string[] = [];
    let introText = '';
    
    lines.forEach(line => {
      if (line.startsWith('- ')) {
        if (!inList) {
          inList = true;
          introText = lines.slice(0, lines.indexOf(line)).join(' ').trim();
        }
        let content = line.replace(/^- /, '').trim();
        content = content.replace(boldPattern, '<strong class="text-slate-900 dark:text-white font-semibold">$1</strong>');
        listItems.push(`<li class="flex items-start mb-4"><span class="text-blue-600 dark:text-blue-400 mr-3 mt-1 flex-shrink-0">â€¢</span><span class="text-slate-600 dark:text-slate-300">${content}</span></li>`);
      } else if (inList && line.trim() === '') {
        inList = false;
        result += `<p class="mb-4">${introText}</p><ul class="list-none pl-0 mb-4">${listItems.join('')}</ul>`;
        listItems = [];
        introText = '';
      } else if (!inList && line.trim()) {
        if (!introText) {
          introText = line.trim();
        }
      }
    });
    
    if (listItems.length > 0) {
      result += `<p class="mb-4">${introText}</p><ul class="list-none pl-0 mb-4">${listItems.join('')}</ul>`;
    }
    
    html = result || html.replace(boldPattern, '<strong class="text-slate-900 dark:text-white">$1</strong>');
  } else {
    html = html.replace(/\n\n/g, '</p><p class="mb-4">');
    html = html.replace(boldPattern, '<strong class="text-slate-900 dark:text-white">$1</strong>');
  }
  
  return html;
};

const techLayers = Object.entries(project.techStack);
---

<MainLayout title={`${project.title} | Showcase`}>
  <Navbar />

  <main class="pt-24 pb-24 relative overflow-hidden">
    <section class="max-w-5xl mx-auto px-6">
      <div class="mb-8" data-aos="fade-up">
        
        <a href="/showcase" class="inline-flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Kembali ke Showcase
        </a>
        
        <h1 class="text-4xl md:text-5xl font-black mb-4 tracking-tighter">{project.title}</h1>
        <p class="text-lg text-slate-500 dark:text-slate-400 max-w-2xl">{project.shortDesc}</p>
        
        <div class="flex flex-wrap gap-2 mt-6">
          {project.tags.map(tag => (
            <span class="text-[10px] font-bold px-4 py-2 bg-blue-50 dark:bg-blue-900/20 text-blue-600 dark:text-blue-400 border border-blue-100 dark:border-blue-500/20 rounded-lg uppercase tracking-widest">
              {tag}
            </span>
          ))}
        </div>
      </div>

      <div class="mb-16" data-aos="fade-up" data-aos-delay="100">
        <div class="relative aspect-video bg-slate-100 dark:bg-slate-900 rounded-3xl overflow-hidden border border-slate-200 dark:border-slate-800" id="slideshow-container">
          <div class="slideshow-wrapper flex transition-transform duration-500 h-full" id="slideshow-wrapper">
            {project.screenshots.map((screenshot, index) => (
              <div class="slideshow-slide min-w-full h-full flex items-center justify-center bg-slate-100 dark:bg-slate-900">
                <div class="text-slate-400 dark:text-slate-600 font-bold text-lg uppercase tracking-wider">
                  Screenshot {index + 1}
                </div>
              </div>
            ))}
          </div>
          
          <button class="slideshow-btn prev absolute left-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/80 dark:bg-slate-900/80 rounded-full flex items-center justify-center shadow-lg hover:bg-white dark:hover:bg-slate-900 transition-colors" id="prev-btn">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          
          <button class="slideshow-btn next absolute right-4 top-1/2 -translate-y-1/2 w-12 h-12 bg-white/80 dark:bg-slate-900/80 rounded-full flex items-center justify-center shadow-lg hover:bg-white dark:hover:bg-slate-900 transition-colors" id="next-btn">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
          </button>
          
          <div class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2" id="dots-container">
            {project.screenshots.map((_, index) => (
              <button class="dot w-2 h-2 rounded-full bg-white/50 hover:bg-white transition-colors" data-index={index}></button>
            ))}
          </div>
        </div>
      </div>

      <div class="grid lg:grid-cols-3 gap-12">
        <div class="lg:col-span-2 space-y-16">
          <section data-aos="fade-up" data-aos-delay="200">
            <h2 class="text-2xl font-black mb-6 tracking-tight flex items-center gap-3">
              <span class="w-8 h-8 bg-red-100 dark:bg-red-900/30 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </span>
              The Challenge
            </h2>
            {project.challengeDesc && (
              <p class="text-slate-600 dark:text-slate-300 leading-relaxed text-lg mb-6">{project.challengeDesc}</p>
            )}
            <div class="prose prose-slate dark:prose-invert max-w-none">
              <p class="text-slate-600 dark:text-slate-300 leading-relaxed" set:html={formatText(project.challenge)}></p>
            </div>
          </section>

          <section data-aos="fade-up" data-aos-delay="300">
            <h2 class="text-2xl font-black mb-6 tracking-tight flex items-center gap-3">
              <span class="w-8 h-8 bg-green-100 dark:bg-green-900/30 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </span>
              The Solution
            </h2>
            <p class="text-slate-600 dark:text-slate-300 leading-relaxed text-lg">{project.solution}</p>
          </section>

          <section data-aos="fade-up" data-aos-delay="400">
            <h2 class="text-2xl font-black mb-6 tracking-tight flex items-center gap-3">
              <span class="w-8 h-8 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                </svg>
              </span>
              Key Features
            </h2>
            <div class="grid sm:grid-cols-2 gap-4">
              {project.features.map(feature => (
                <div class="p-5 bg-slate-50 dark:bg-slate-900/50 rounded-2xl border border-slate-100 dark:border-slate-800 hover:border-blue-200 dark:hover:border-blue-800 transition-colors">
                  <h3 class="font-bold text-slate-900 dark:text-white mb-2">{feature.title}</h3>
                  <p class="text-sm text-slate-500 dark:text-slate-400">{feature.desc}</p>
                </div>
              ))}
            </div>
          </section>

          <section data-aos="fade-up" data-aos-delay="500">
            <h2 class="text-2xl font-black mb-6 tracking-tight flex items-center gap-3">
              <span class="w-8 h-8 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                </svg>
              </span>
              Tech Stack
            </h2>
            <div class="overflow-hidden rounded-2xl border border-slate-200 dark:border-slate-800">
              <table class="w-full">
                <thead>
                  <tr class="bg-slate-50 dark:bg-slate-900/50">
                    <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400">Layer</th>
                    <th class="px-6 py-4 text-left text-xs font-bold uppercase tracking-widest text-slate-500 dark:text-slate-400">Technology</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 dark:divide-slate-800">
                  {techLayers.map(([layer, tech]) => (
                    <tr class="hover:bg-slate-50 dark:hover:bg-slate-900/30 transition-colors">
                      <td class="px-6 py-4 text-sm font-medium text-slate-900 dark:text-white">{layer}</td>
                      <td class="px-6 py-4 text-sm text-slate-600 dark:text-slate-300">{tech}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </section>

          <section data-aos="fade-up" data-aos-delay="600">
            <h2 class="text-2xl font-black mb-6 tracking-tight flex items-center gap-3">
              <span class="w-8 h-8 bg-amber-100 dark:bg-amber-900/30 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-amber-600 dark:text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                </svg>
              </span>
              The Result & Impact
            </h2>
            {project.resultDesc && (
              <p class="text-slate-600 dark:text-slate-300 leading-relaxed text-lg mb-6">{project.resultDesc}</p>
            )}
            <div class="prose prose-slate dark:prose-invert max-w-none">
              <p class="text-slate-600 dark:text-slate-300 leading-relaxed" set:html={formatText(project.result)}></p>
            </div>
          </section>
        </div>

        <div class="lg:col-span-1">
          <div class="sticky top-32">
            <div class="p-6 bg-slate-50 dark:bg-slate-900/50 rounded-2xl border border-slate-200 dark:border-slate-800">
              <h3 class="font-bold text-slate-900 dark:text-white mb-4">Quick Info</h3>
              <div class="space-y-4">
                <div>
                  <span class="text-xs font-bold uppercase tracking-widest text-slate-400">Tech Stack</span>
                  <div class="flex flex-wrap gap-2 mt-2">
                    {project.tags.map(tag => (
                      <span class="text-xs font-semibold px-2 py-1 bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-md">{tag}</span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <script>
    const wrapper = document.getElementById('slideshow-wrapper');
    const slides = document.querySelectorAll('.slideshow-slide');
    const dots = document.querySelectorAll('.dot');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    
    let currentSlide = 0;
    const totalSlides = slides.length;

    function updateSlides() {
      if (wrapper) {
        wrapper.style.transform = `translateX(-${currentSlide * 100}%)`;
      }
      dots.forEach((dot, index) => {
        dot.classList.toggle('bg-white', index === currentSlide);
        dot.classList.toggle('bg-white/30', index !== currentSlide);
      });
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      updateSlides();
    }

    function prevSlide() {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
      updateSlides();
    }

    prevBtn?.addEventListener('click', prevSlide);
    nextBtn?.addEventListener('click', nextSlide);

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        currentSlide = index;
        updateSlides();
      });
    });

    setInterval(nextSlide, 5000);

    updateSlides();
  </script>
</MainLayout>
